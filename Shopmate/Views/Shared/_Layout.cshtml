<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shopmate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-lg navbar-light top-navbar">
            <a class="navbar-brand" href="@Url.Action("index", "home")"><span id="sHOPMATE">SHOPMATE</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topbar" aria-controls="topbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="topbar" class="collapse navbar-collapse" ng-app="categories" ng-controller="catctrl">

                <div class="nav-item" ng-repeat="x in data">
                    <a href="@Url.Action("index","women")"><span id="women">{{data.name}}</span></a>
                </div>
                <div class="nav-item ">
                    <a href="@Url.Action("index","men")"><span id="men">MEN</span></a>
                </div>
                <div class="nav-item ">
                    <a href="@Url.Action("index","kids")"><span id="kids">KIDS</span></a>
                </div>
                <div class="nav-item ">
                    <a href="@Url.Action("index","shoes")"><span id="shoes">SHOES</span></a>
                </div>
                <div class="nav-item mr-auto">
                    <a href="@Url.Action("index","brands")"><span id="women">BRANDS</span></a>
                </div>

                <div class="nav-item">
                    <a href="#"><img src="https://a.icons8.com/PSdOYTql/7SOi2s/iconssearchblack.png" class="img-fluid" /></a>
                </div>
                <div class="nav-item">
                    <a href="#"><img src="https://a.icons8.com/PSdOYTql/MT0H1R/iconsbagblack.png" class="img-fluid" /></a>
                    <a href="#" id="controlsnu bg"><img src="https://a.icons8.com/PSdOYTql/yAkwnR/controlsnumberred.png" class="img-fluid" /></a>
                </div>
                

            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
        <hr />

    </div>
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
